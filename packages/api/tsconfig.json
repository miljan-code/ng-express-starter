{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["types/", "node_modules/@types"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "./*.ts"],
  "exclude": ["node_modules"]
}
